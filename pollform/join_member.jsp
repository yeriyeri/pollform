	else if(!document.userInfo.name.value){ alert("사용자 이름을 입력하시오");return false;}
	else if(document.userInfo.passwd.value != document.userInfo.passwd_check.value){
	        alert("비밀번호를 동일하게 입력하세요.");
	        return false;
	      }
	
